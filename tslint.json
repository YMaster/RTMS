{
  "extends": "tslint:recommended",
  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "member-ordering": false,
    "arrow-parens": [
      true
    ],
    "member-access": false,
    "no-implicit-dependencies": false,
    "no-magic-numbers": false,
    "linebreak-style": false,
    "cyclomatic-complexity": [
      true,
      50
    ],
    "no-import-side-effect": false,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "ordered-imports": false,
    "max-line-length": [
      true,
      {
        "ignore-pattern": "^import |^export {(.*?)}",
        "check-strings": true,
        "check-regex": true
      }
    ],
    "semicolon": [
      true,
      "never"
    ],
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace",
        "dir"
      ]
    },
    "object-literal-sort-keys": false
  },
  "linterOptions": {
    "exclude": [
      "**/node_modules/**",
      "typings/*"
    ]
  }
}